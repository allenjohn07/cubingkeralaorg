generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Users {
  wcaid     String   @id @unique
  name      String
  avatarUrl String
  country   String?
  gender    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Requests {
  wcaid     String   @id @unique
  name      String
  avatarUrl String
  country   String?
  gender    String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Members {
  wcaid     String   @id @unique
  name      String
  avatarUrl String
  country   String?
  gender    String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
